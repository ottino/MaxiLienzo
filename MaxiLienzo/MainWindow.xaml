<Window x:Class="MaxiLienzo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxiLienzo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"  
        AllowsTransparency="True"
        Background="White"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid Background="LightGray" Height="30" VerticalAlignment="Top" MouseDown="MoveWindow">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Ellipse Width="10" Height="10" Fill="Red" Margin="5" MouseDown="CloseWindow"/>
                <Ellipse Width="10" Height="10" Fill="Yellow" Margin="5" MouseDown="MinimizeWindow"/>
                <Ellipse Width="10" Height="10" Fill="Green" Margin="5" MouseDown="MaximizeWindow"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
